{
	"name": "@mattcampbell/eslint-config",
	"version": "0.8.30",
	"description": "A very opinionated ESLint and Prettier config.",
	"author": "Matt Campbell <mrmattrc@gmail.com>",
	"homepage": "https://github.com/mrmattrc/eslint-config#readme",
	"bugs": {
		"url": "https://github.com/mrmattrc/eslint-config/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mrmattrc/eslint-config.git"
	},
	"main": "index.js",
	"directories": {
		"lib": "lib"
	},
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"eslint": "eslint \"**/*.{js,jsx,ts,tsx}\" --quiet --fix",
		"check-types": "tsc --noemit",
		"prettier": "prettier --write .",
		"lint": "npm run eslint && npm run check-types",
		"lint:fix": "npm run eslint --fix && npm run check-types && npm run prettier"
	},
	"license": "MIT",
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^5.9.0",
		"@typescript-eslint/parser": "^5.9.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-chai-friendly": "^0.7.2",
		"eslint-plugin-cypress": "^2.12.1",
		"eslint-plugin-deprecation": "^1.3.2",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-jest": "^25.3.4",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-no-secrets": "^0.8.9",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-promise": "^6.0.0",
		"eslint-plugin-react": "^7.28.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"eslint-plugin-sonarjs": "^0.11.0",
		"eslint-plugin-svelte3": "^3.3.0",
		"eslint-plugin-testing-library": "^5.0.1",
		"eslint-plugin-unicorn": "^40.0.0",
		"eslint-plugin-unused-imports": "^2.0.0",
		"prettier": "^2.5.1"
	},
	"peerDependencies": {
		"eslint": ">= 8.0.0",
		"typescript": ">= 4.2.0"
	},
	"devDependencies": {
		"@nick-mazuk/semantic-release-config": "^1.1.3",
		"@nick-mazuk/tsconfig": "^0.1.1",
		"@semantic-release/changelog": "^6.0.1",
		"@semantic-release/git": "^10.0.1",
		"eslint": "^8.6.0",
		"semantic-release": "^18.0.1",
		"typescript": "^4.5.4"
	},
	"keywords": [
		"eslint",
		"prettier",
		"config"
	]
}
